var movePlayer = function() { 
  if (goUp) { 
    gravity -= 0.4; 
  } else {
    gravity += 0.4; 
  } 
  if (gravity > 8) {
    gravity = 8; 
  } 
  if (gravity < -6) { 
    gravity = -6; 
  } 
  
  player.y += gravity; 
  
  if (player.y > 500 || player.y < 0) { 
    crashed = true; 
  } 
}; 



var mousePressed = function() { 
  if (mouseButton === LEFT) { 
    if (startScreen) {
      startScreen = false; 
    }
    goUp = true;
    
    
    if (crashed) {
      crashed = false; 
      player.y = 250; 
      gravity = 0;
      score = 0;
      startTime = 0;
      // millis() = 0;
      coins = [];
      walls = [];
    }
  } 
}; 

var mouseReleased = function() {
  if (mouseButton === LEFT) { 
    goUp = false;
  } 
}; 

